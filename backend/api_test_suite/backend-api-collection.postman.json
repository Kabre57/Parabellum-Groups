{
  "info": {
    "name": "API Tests - Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"secret\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/auth/login",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Clients - Get All",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/clients",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "clients"
          ]
        }
      }
    }
  ]
}